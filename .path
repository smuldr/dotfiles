export PATH=${PATH}:"$HOME/bin"

# Ubuntu specific paths
if [[ `uname` == 'Linux' ]]	then
	export PATH=${PATH}:"/opt/android-studio/sdk/platform-tools:/opt/android-studio/sdk/tools:/opt/android-studio/bin:"
	export PATH=${PATH}:"/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:"
	export PATH=${PATH}:"/usr/games:/usr/local/games"
fi

# OS X specific paths
if [[ `uname` == 'Darwin' ]] then
	export PATH=${PATH}:"/Applications/Android Studio.app/sdk/tools/":"/Applications/Android Studio.app/sdk/platform-tools/"
	export PATH=${PATH}:"/Users/steven/Applications/eclipse/"
	export PATH=${PATH}:"/Users/steven/Applications/sonarqube-4.1/bin/macosx-universal-64/"
	export PATH=${PATH}:"/Users/steven/Applications/sonar-runner-2.3/bin/"

	export JAVA_HOME=$(/usr/libexec/java_home)
fi
